<% form_method = @user.persisted? ? :put : :post %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: form_method, multipart: true }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :avatar, "プロフィール画像" %><br />
    <%= f.file_field :avatar %>
  </div>

  <div>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :birthday, "生年月日" %><br />
    <%= f.date_field :birthday, autocomplete: "bday" %>
  </div>

  <div class="field">
    <%= f.label :gender, "性別" %><br />
    <%= f.select :gender, User.genders.keys.map { |g| [t("activerecord.attributes.user.gender.#{g}"), g] }, include_blank: "選択してください" %>
  </div>

  <div class="field">
    <%= f.label :introduction %><br />
    <%= f.text_area :introduction %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", readonly: @user.persisted? %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <% if @user.persisted? %>
    <!-- 編集時の表示 -->

    <div class="field">
      <%= f.label :password %> <i><%= t("devise.registrations.edit.leave_blank_note") %></i><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <p class="form-text">
          <%= t("devise.registrations.password_hint", min: @minimum_password_length) %>
        </p>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :current_password %> <i><%= t("devise.registrations.edit.current_password_note") %></i><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

  <% else %>
    <!-- 新規登録時の表示 -->

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <p class="form-text">
          <%= t("devise.registrations.password_hint", min: @minimum_password_length) %>
        </p>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit @user.persisted? ? t("devise.registrations.edit.update_button") : t("devise.registrations.new.submit_button") %>
  </div>
<% end %>
