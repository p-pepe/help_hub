<p style="color: green"><%= notice %></p>

<% content_for :title, "Tags" %>

<h1>Tags</h1>

<div id="tags">
  <% @tags.each do |tag| %>
    <%= turbo_frame_tag tag do %>
      <%= render partial: "content", locals: { tag: tag } %>
    <% end %>
  <% end %>
</div>

<%= turbo_frame_tag "new_tag" do %>
  <%= link_to "New Tag", new_tag_path %>
<% end %>

